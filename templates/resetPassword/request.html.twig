{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Reset your password</h1>
    <div class="container">
        <div class="row">
            <small>
                Enter your email address and we we will send you a
                link to reset your password.
            </small>
        </div>
    {{ form_start(requestForm,{'attr':{'class':'container'}}) }}
        {{ form_row(requestForm.email,{'attr': {'class': 'form-control'},'label_attr': {'class': 'row'}}) }}


        <button class="btn btn-primary mt-3">Send password reset email</button>
    {{ form_end(requestForm) }}
    </div>
{% endblock %}
